{
  "name": "@mwohaji/server",
  "license": "Apache-2.0",
  "type": "module",
  "main": "index.ts",
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22"
  },
  "scripts": {
    "dev": "tsx watch src/server",
    "test": "jest",
    "test:mysql": "cd .. && docker-compose up -d mysql && cd server",
    "start": "NODE_ENV=production tsx src/server",
    "lint": "eslint . --fix && yarn typecheck",
    "lint:ci": "eslint . --max-warnings=0 && yarn typecheck",
    "typecheck": "tsc",
    "postinstall": "yarn prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:initdb": "prisma db push --force-reset"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@trpc/client": "^10.34.0",
    "@trpc/server": "^10.34.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "prisma": "^5.0.0",
    "tsx": "^3.12.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.2",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
