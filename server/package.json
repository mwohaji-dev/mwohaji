{
  "name": "@mwohaji/server",
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "tsx watch src/server",
    "test": "tsx src/client",
    "start": "tsx src/server",
    "lint": "eslint . --fix && pnpm typecheck",
    "lint:ci": "eslint . --max-warnings=0 && pnpm typecheck",
    "typecheck": "tsc",
    "postinstall": "pnpm prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:initdb": "prisma db push --force-reset"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@trpc/client": "^10.34.0",
    "@trpc/server": "^10.34.0",
    "express": "^4.18.2",
    "prisma": "^5.0.0",
    "tsx": "^3.12.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
